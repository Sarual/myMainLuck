<template>
  <TitleBar :titleText.sync="titleText" :isBackBtn.sync="isBackBtn">
  </TitleBar>
  <LoadingX :isLoading.sync="isLoading"></LoadingX>
  <TabBar @currentTab.user="getCurrentTab" :tabList.sync="tabList" :currentTab.sync="currentTab"></TabBar>
  <swiper class="text" style="text-align:center;" current="{{currentTab}}" bindchange="switchTab" duration='300'>
    <swiper-item>
      <scroll-view scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}">
        全部订单
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}">
        代付款
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}">
        已付款
      </scroll-view>
    </swiper-item>
  </swiper>
</template>

<script>
  import wepy from 'wepy'
  import TitleBar from '../components/TitleBar'
  import LoadingX from '../components/LoadingX'
  import TabBar from '../components/TabBar'
  export default class Strategy extends wepy.page {
    config = {}
    data = {
      titleText: '',
      isBackBtn: true,
      isLoading: true,
      currentTab: 0,
      tabList: ['全部订单', '代付款', '已付款']
    }
    components = {
      TitleBar,
      LoadingX,
      TabBar
    }
    methods = {
      getCurrentTab(cur, evt) {
        let that = this
        that.currentTab = cur
        that.$apply()
      },
      switchTab(e) {
        let current = e.detail.current.toString()
        if (this.currentTab === current) return false
        else {
          this.currentTab = current
        }
      }
    }
    onLoad(options) {
      var that = this
      //
      that.titleText = '常用信息'
      if (that.isLoading) {
        that.loadBarLimit()
      }
    }
    onShow() {}
    loadBarLimit() {
      setTimeout(() => {
        this.isLoading = false
        this.$apply()
      }, 1000)
    }
  }
</script>

<style lang="scss" rel="stylesheet/scss" scoped>
  @import "../assets/stylesheets/layout.scss";
</style>
